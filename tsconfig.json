{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "esModuleInterop": true,
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "outDir": "dist",
    "rootDir": "src",
    "jsx": "react",
    "declaration": false,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@core/*": ["src/core/*"],
      "@core/agent": ["src/core/agent/index.ts"],
      "@core/tools": ["src/core/tools/index.ts"],
      "@core/services/*": ["src/core/services/*"],
      "@core/config": ["src/core/config/index.ts"],
      "@core/permissions": ["src/core/permissions/index.ts"],
      "@core/types/*": ["src/core/types/*"],
      "@core/utils/*": ["src/core/utils/*"],

      "@cli/*": ["src/cli/*"],
      "@cli/components/*": ["src/cli/components/*"],
      "@cli/screens/*": ["src/cli/screens/*"],
      "@cli/hooks/*": ["src/cli/hooks/*"],
      "@cli/commands": ["src/cli/commands/index.ts"],
      "@cli/commands/*": ["src/cli/commands/*"],
      "@cli/services/*": ["src/cli/services/*"],
      "@cli/utils/*": ["src/cli/utils/*"],
      "@cli/constants/*": ["src/cli/constants/*"],
      "@cli/context/*": ["src/cli/context/*"],

      "@web/*": ["src/web/*"],
      "@mobile/*": ["src/mobile/*"],
      "@shared/*": ["src/shared/*"],

      "@components": ["src/cli/components"],
      "@components/*": ["src/cli/components/*"],
      "@commands": ["src/cli/commands/index.ts"],
      "@commands/*": ["src/cli/commands/*"],
      "@utils": ["src/core/utils"],
      "@utils/*": ["src/core/utils/*"],
      "@constants": ["src/shared/constants"],
      "@constants/*": ["src/shared/constants/*"],
      "@constants/prompts": ["src/core/utils/prompts.ts"],
      "@constants/macros": ["src/core/utils/macros.ts"],
      "@constants/figures": ["src/cli/constants/figures.ts"],
      "@hooks": ["src/cli/hooks"],
      "@hooks/*": ["src/cli/hooks/*"],
      "@app/*": ["src/core/agent/*"],
      "@services": ["src/core/services"],
      "@services/customCommands": ["src/core/services/plugins/customCommands.ts"],
      "@services/fileFreshness": ["src/core/services/system/fileFreshness.ts"],
      "@services/gpt5ConnectionTest": ["src/core/services/ai/gpt5ConnectionTest.ts"],
      "@services/kodeContext": ["src/core/services/context/kodeContext.ts"],
      "@services/llm": ["src/core/services/ai/llm.ts"],
      "@services/llmConstants": ["src/core/services/ai/llmConstants.ts"],
      "@services/llmLazy": ["src/core/services/ai/llmLazy.ts"],
      "@services/mentionProcessor": ["src/core/services/context/mentionProcessor.ts"],
      "@services/mcpCliUtils": ["src/core/services/mcp/cli-utils.ts"],
      "@services/mcpClient": ["src/core/services/mcp/index.ts"],
      "@services/modelAdapterFactory": ["src/core/services/ai/modelAdapterFactory.ts"],
      "@services/notifier": ["src/cli/services/ui/notifier.ts"],
      "@services/oauth": ["src/core/services/auth/oauth.ts"],
      "@services/datasource": ["src/core/services/datasource/index.ts"],
      "@services/datasource/*": ["src/core/services/datasource/*"],
      "@services/openai": ["src/core/services/ai/openai.ts"],
      "@services/outputStyles": ["src/cli/services/ui/outputStyles.ts"],
      "@services/pluginRuntime": ["src/core/services/plugins/pluginRuntime.ts"],
      "@services/pluginValidation": ["src/core/services/plugins/pluginValidation.ts"],
      "@services/responseStateManager": ["src/core/services/ai/responseStateManager.ts"],
      "@services/sentry": ["src/core/services/telemetry/sentry.ts"],
      "@services/skillMarketplace": ["src/core/services/plugins/skillMarketplace.ts"],
      "@services/statusline": ["src/cli/services/ui/statusline.ts"],
      "@services/systemPrompt": ["src/core/services/system/systemPrompt.ts"],
      "@services/systemReminder": ["src/core/services/system/systemReminder.ts"],
      "@services/vcr": ["src/core/services/system/vcr.ts"],
      "@services/*": ["src/core/services/*"],
      "@services/adapters/*": ["src/core/services/ai/adapters/*"],
      "@screens": ["src/cli/screens"],
      "@screens/*": ["src/cli/screens/*"],
      "@tools": ["src/core/tools/index.ts"],
      "@tools/*": ["src/core/tools/*"],
      "@tools/BashTool/*": ["src/core/tools/system/BashTool/*"],
      "@tools/KillShellTool/*": ["src/core/tools/system/KillShellTool/*"],
      "@tools/TaskOutputTool/*": ["src/core/tools/system/TaskOutputTool/*"],
      "@tools/FileReadTool/*": ["src/core/tools/filesystem/FileReadTool/*"],
      "@tools/FileWriteTool/*": ["src/core/tools/filesystem/FileWriteTool/*"],
      "@tools/FileEditTool/*": ["src/core/tools/filesystem/FileEditTool/*"],
      "@tools/NotebookReadTool/*": ["src/core/tools/filesystem/NotebookReadTool/*"],
      "@tools/NotebookEditTool/*": ["src/core/tools/filesystem/NotebookEditTool/*"],
      "@tools/MultiEditTool/*": ["src/core/tools/filesystem/MultiEditTool/*"],
      "@tools/GlobTool/*": ["src/core/tools/filesystem/GlobTool/*"],
      "@tool": ["src/core/tools/tool.ts"],
      "@kode-types": ["src/core/types"],
      "@kode-types/*": ["src/core/types/*"],
      "@context": ["src/cli/context/index.ts"],
      "@context/*": ["src/cli/context/*"],
      "@history": ["src/core/agent/history.ts"],
      "@costTracker": ["src/core/costTracker.ts"],
      "@permissions": ["src/core/permissions/index.ts"],
      "@agent": ["src/core/agent/index.ts"],
      "@agent/*": ["src/core/agent/*"],
      "@query": ["src/core/agent/query.ts"],
      "@messages": ["src/core/agent/messages.ts"],
      "*": ["node_modules/*", "src/core/types/*", "src/*"]
    },
    "types": ["bun-types", "node"],
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": false,
    "ignoreDeprecations": "5.0",
    "useUnknownInCatchVariables": false,
    "noErrorTruncation": true,
    "noEmit": false,
    "skipDefaultLibCheck": true,
    "isolatedModules": true,
    "allowUnreachableCode": true,
    "allowUnusedLabels": true,
    "noFallthroughCasesInSwitch": false,
    "noImplicitReturns": false,
    "noPropertyAccessFromIndexSignature": false,
    "noUncheckedIndexedAccess": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "plugins": [
      {
        "transform": "ts-transform-define",
        "type": "config",
        "config": {
          "MACRO": "src/core/utils/macros.ts"
        }
      }
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "transpileOnly": true,
    "compilerOptions": {
      "module": "NodeNext"
    }
  }
}
